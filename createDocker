#!/usr/bin/bash
docker run --detach \
        --name=bind9 \
        --restart=always \
        --publish 53:53/udp \
        --publish 53:53/tcp \
        --publish 10000:10000/tcp \
        --publish 127.0.0.1:953:953/tcp \
        --volume /etc/bind \
        --volume /var/cache/bind \
        --volume /var/lib/bind \
        --volume /var/log \
        --hostname ${1:?"You must supply the hostname for the container"} \
        marioja/bind9:webmin
